class Solution:
    def numberOfWays(self, n: int, x: int) -> int:
        MOD = 10**9 + 7
        dp = [1] + [0] * n  # dp[i] = number of ways to form sum i

        for a in range(1, n + 1):
            power = a ** x
            if power > n:
                break
            for total in range(n, power - 1, -1):
                dp[total] = (dp[total] + dp[total - power]) % MOD

        return dp[n]
