def is_prime(n):
    if n < 2:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True

def sum_of_prime_digits(number):
    total = 0
    while number > 0:
        digit = number % 10
        if is_prime(digit):
            total += digit
        number = number // 10
    return total

# Example usage
num = int(input("Enter an integer: "))
print("Sum of prime digits:", sum_of_prime_digits(num))
